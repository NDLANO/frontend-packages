{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist/*.js", "{projectRoot}/dist/*.mjs"],
      "cache": true
    },
    "prepublish": {
      "dependsOn": ["^prepublish"],
      "inputs": [
        "{workspaceRoot}/tsconfig.json",
        "{workspaceRoot}/tsconfig.build.sjon",
        "{projectRoot}/*",
        "{projectRoot}/src/**/*"
      ],
      "outputs": ["{projectRoot}/dist/*.d.ts", "{projectRoot}/dist/*.css", "{projectRoot}/dist/*"],
      "cache": true
    },
    "build:dev": {
      "cache": false,
      "continuous": true
    },
    "watch:tsc": {
      "cache": false,
      "continuous": true
    },
    "watch": {
      "cache": false,
      "continuous": true
    }
  },
  "defaultBase": "master",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": [],
    "production": ["default"]
  },
  "tui": {
    "autoExit": 1
  }
}
