{
  "private": true,
  "name": "frontend-packages",
  "description": "NDLA Frontend Packages",
  "scripts": {
    "lint": "eslint --ext .js --ext .jsx ./packages --ignore-path .gitignore",
    "test": "cross-env NODE_ENV=unittest jest",
    "postinstall": "lerna bootstrap",
    "deploy-storybook": "storybook-to-ghpages",
    "prebuild-storybook": "lerna bootstrap",
    "clean": "lerna clean",
    "watch": "node ./scripts/watch.js",
    "start": "concurrently --kill-others \"npm run watch\" \"npm run start-storybook\"",
    "start-storybook": "packages/ndla-ui/node_modules/.bin/start-storybook -c packages/ndla-ui/.storybook -p 6006",
    "build-storybook": "packages/ndla-ui/node_modules/.bin/build-storybook -c packages/ndla-ui/.storybook -o .out"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NDLANO/frontend-packages.git"
  },
  "bugs": {
    "url": "https://github.com/NDLANO/frontend-packages/issues"
  },
  "homepage": "https://github.com/NDLANO/frontend-packages",
  "author": "ndla@knowit.no",
  "license": "GPL-3.0",
  "devDependencies": {
    "@kadira/storybook-deployer": "1.2.0",
    "babel-cli": "6.24.1",
    "babel-core": "6.24.1",
    "babel-jest": "19.0.0",
    "babel-plugin-transform-object-rest-spread": "6.23.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-env": "^1.4.0",
    "chalk": "1.1.3",
    "chokidar": "1.6.1",
    "classnames": "2.2.5",
    "concurrently": "3.4.0",
    "cross-env": "4.0.0",
    "eslint": "3.19.0",
    "eslint-config-ndla": "0.1.1",
    "jest": "19.0.2",
    "lerna": "2.0.0-rc.4",
    "prop-types": "15.5.8",
    "react": "15.5.4",
    "react-bem-helper": "1.4.1",
    "react-collapse": "4.0.1",
    "react-dom": "15.5.4",
    "react-height": "3.0.0",
    "react-motion": "0.4.8",
    "react-router-dom": "^4.1.1",
    "react-tabs": "0.8.3",
    "react-test-renderer": "15.5.4",
    "rimraf": "2.6.1"
  }
}
