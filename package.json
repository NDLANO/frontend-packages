{
  "private": true,
  "name": "frontend-packages",
  "description": "NDLA Frontend Packages",
  "scripts": {
    "build-clean": "rm -rf ./packages/*/es ./packages/*/lib ./packages/*/dist",
    "build": "node ./scripts/build.js packages",
    "lint": "yarn format-check && yarn lint-es",
    "lint-es": "eslint --cache --ext .js,.jsx,.ts,.tsx --max-warnings=0 ./packages --ignore-path .gitignore",
    "format": "node ./scripts/prettier.js write",
    "format-check": "node ./scripts/prettier.js lint",
    "type-check": "tsc --noEmit",
    "type-check-watch": "yarn type-check --watch --preserveWatchOutput",
    "test": "cross-env BABEL_ENV=test NODE_ENV=unittest jest",
    "check-all": "yarn type-check && yarn format-check && yarn lint-es && yarn test",
    "deploy": "vercel --token $VERCEL_TOKEN alias frontend-packages-master.ndla.sh designmanual.ndla.no && vercel --token $VERCEL_TOKEN alias frontend-packages-master.ndla.sh designmanual.ndla.sh",
    "clean": "rm -rf ./packages/*/es ./packages/*/lib  ./packages/*/dist",
    "bootstrap": "lerna bootstrap && yarn build && lerna run prepublish",
    "publish": "yarn clean && yarn bootstrap && lerna publish --registry http://localhost:4873",
    "pre-release": "yarn clean && yarn bootstrap && lerna publish --canary minor --no-git-tag-version --dist-tag next ",
    "watch": "node ./scripts/watch.js",
    "start": "yarn build && concurrently -k -p \"[{name}]\" -n \"Babel,Storybook,Typescript\" -c \"yellow.bold,magenta.bold,blue.bold\" \"yarn watch\" \"yarn start-storybook\" \"yarn type-check-watch\"",
    "start-storybook": "node ./scripts/startStorybook.js",
    "prebuild-storybook": "yarn bootstrap",
    "build-storybook": "cross-env NODE_ENV=production node ./scripts/buildStorybook.js",
    "serve-storybook": "cross-env NODE_ENV=production serve ./packages/designmanual/storybook-static",
    "check-translations": "cross-env BABEL_ENV=test NODE_ENV=unittest jest 'packages/ndla-ui/src/locale/__tests__/'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NDLANO/frontend-packages.git"
  },
  "bugs": {
    "url": "https://github.com/NDLANO/frontend-packages/issues"
  },
  "homepage": "https://github.com/NDLANO/frontend-packages",
  "author": "ndla@knowit.no",
  "license": "GPL-3.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "@testing-library/react": "^12.1.3",
    "@types/facepaint": "^1.2.1",
    "@types/invariant": "^2.2.34",
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.11.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-test-renderer": "^16.8.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.1.0",
    "babel-plugin-emotion": "^10.0.33",
    "babel-preset-es2015": "6.24.1",
    "camelcase": "^5.0.0",
    "chalk": "^2.4.2",
    "cheerio": "^1.0.0-rc.2",
    "chokidar": "2.1.1",
    "concurrently": "^4.1.0",
    "cross-env": "^5.1.3",
    "cross-spawn": "^6.0.4",
    "css-loader": "^2.1.0",
    "eslint": "^7.18.0",
    "i18next": "^20.3.1",
    "jest": "^26.6.3",
    "jest-dom": "^3.1.1",
    "jest-emotion": "^10.0.9",
    "lerna": "^3.11.1",
    "mini-css-extract-plugin": "^0.5.0",
    "mkdirp": "^0.5.1",
    "prettier": "^2.3.2",
    "prop-types": "^15.8.1",
    "react": "^16.13.1",
    "react-bem-helper": "1.4.1",
    "react-device-detect": "^2.1.2",
    "react-dom": "^16.13.1",
    "react-helmet-async": "^1.3.0",
    "react-i18next": "^11.11.0",
    "react-router-dom": "^6.3.0",
