{
  "private": true,
  "name": "frontend-packages",
  "description": "NDLA Frontend Packages",
  "scripts": {
    "lint": "yarn run lint-prettier --silent && eslint --cache --ext .js --ext .jsx ./packages --ignore-path .gitignore",
    "lint-prettier": "node scripts/prettier.js lint",
    "test": "cross-env NODE_ENV=unittest jest",
    "deploy": "now --token $NDLA_NOW_TOKEN alias frontend-packages-master.ndla.sh designmanual.ndla.sh",
    "clean": "lerna clean && lerna run clean",
    "bootstrap": "lerna bootstrap && lerna run prepublish",
    "watch": "node ./scripts/watch.js",
    "start": "node ./scripts/build.js packages && concurrently -r --kill-others \"npm run watch\" \"npm run start-storybook\"",
    "start-storybook": "node ./scripts/startStorybook.js",
    "prebuild-storybook": "yarn bootstrap --silent",
    "build-storybook": "cross-env NODE_ENV=production node ./scripts/buildStorybook.js",
    "serve-storybook": "cross-env NODE_ENV=production serve ./packages/designmanual/storybook-static",
    "prettier": "node ./scripts/prettier.js write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NDLANO/frontend-packages.git"
  },
  "bugs": {
    "url": "https://github.com/NDLANO/frontend-packages/issues"
  },
  "homepage": "https://github.com/NDLANO/frontend-packages",
  "author": "ndla@knowit.no",
  "license": "GPL-3.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "22.4.0",
    "babel-plugin-emotion": "^9.2.10",
    "babel-plugin-polished": "^1.1.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-runtime": "^6.26.0",
    "camelcase": "^4.1.0",
    "capitalize": "^1.0.0",
    "chalk": "^2.3.1",
    "cheerio": "^1.0.0-rc.2",
    "chokidar": "2.0.2",
    "classnames": "2.2.5",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "cross-spawn": "^6.0.4",
    "css-loader": "^0.28.9",
    "eslint": "^4.18.1",
    "jest": "^22.4.0",
    "lerna": "^2.9.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.7.2",
    "prettier": "^1.10.2",
    "prop-types": "15.6.1",
    "react": "^16.3.2",
    "react-bem-helper": "1.4.1",
    "react-collapse": "^4.0.3",
    "react-dom": "^16.3.2",
    "react-height": "3.0.0",
    "react-motion": "0.5.2",
    "react-router-dom": "^4.2.2",
    "react-tabs": "2.2.1",
    "react-test-renderer": "^16.3.2",
    "rimraf": "2.6.2",
    "sass-loader": "^6.0.6",
    "serve": "^9.3.0",
    "sinon": "^4.3.0",
    "string-length": "^2.0.0",
    "style-loader": "^0.20.2",
    "webpack": "^3.11.0"
  }
}
