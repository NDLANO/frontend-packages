{
  "private": true,
  "name": "frontend-packages",
  "description": "NDLA Frontend Packages",
  "scripts": {
    "build-clean": "rm -rf ./packages/*/es ./packages/*/lib ./packages/*/dist",
    "build": "node ./scripts/build.js packages",
    "lint": "yarn format-check && yarn lint-es",
    "lint-es": "eslint --cache --ext .js,.jsx,.ts,.tsx --max-warnings=0 ./packages --ignore-path .gitignore",
    "format": "node ./scripts/prettier.js write",
    "format-check": "node ./scripts/prettier.js lint",
    "type-check": "tsc --noEmit",
    "type-check-watch": "yarn type-check --watch --preserveWatchOutput",
    "test": "cross-env BABEL_ENV=test NODE_ENV=unittest jest",
    "check-all": "yarn type-check && yarn format-check && yarn lint-es && yarn test",
    "deploy": "now --token $NDLA_NOW_TOKEN alias frontend-packages-master.ndla.sh designmanual.ndla.no && now --token $NDLA_NOW_TOKEN alias frontend-packages-master.ndla.sh designmanual.ndla.sh",
    "clean": "rm -rf ./packages/*/es ./packages/*/lib  ./packages/*/dist",
    "bootstrap": "lerna bootstrap && yarn build && lerna run prepublish",
    "publish": "yarn clean && yarn bootstrap && lerna publish",
    "pre-release": "yarn clean && yarn bootstrap && lerna publish --canary minor --no-git-tag-version --dist-tag next ",
    "watch": "node ./scripts/watch.js",
    "start": "yarn build && concurrently -k -p \"[{name}]\" -n \"Babel,Storybook,Typescript\" -c \"yellow.bold,magenta.bold,blue.bold\" \"yarn watch\" \"yarn start-storybook\" \"yarn type-check-watch\"",
    "start-storybook": "node ./scripts/startStorybook.js",
    "prebuild-storybook": "yarn bootstrap",
    "build-storybook": "cross-env NODE_ENV=production node ./scripts/buildStorybook.js",
    "serve-storybook": "cross-env NODE_ENV=production serve ./packages/designmanual/storybook-static"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NDLANO/frontend-packages.git"
  },
  "bugs": {
    "url": "https://github.com/NDLANO/frontend-packages/issues"
  },
  "homepage": "https://github.com/NDLANO/frontend-packages",
  "author": "ndla@knowit.no",
  "license": "GPL-3.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.2",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@emotion/babel-preset-css-prop": "^10.0.9",
    "@emotion/core": "^10.0.9",
    "@emotion/styled": "^10.0.9",
    "@types/lodash": "^4.14.121",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.8.2",
    "@types/react-router-dom": "^4.3.2",
    "@types/react-test-renderer": "^16.8.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.1.0",
    "babel-plugin-emotion": "^10.0.9",
    "babel-plugin-polished": "^1.1.0",
    "babel-preset-es2015": "6.24.1",
    "camelcase": "^5.0.0",
    "chalk": "^2.4.2",
    "cheerio": "^1.0.0-rc.2",
    "chokidar": "2.1.1",
    "classnames": "2.2.6",
    "concurrently": "^4.1.0",
    "cross-env": "^5.1.3",
    "cross-spawn": "^6.0.4",
    "eslint": "^5.13.0",
    "jest": "^24.1.0",
    "jest-dom": "^3.1.1",
    "jest-emotion": "^10.0.9",
    "lerna": "^3.11.1",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.11.0",
    "prettier": "^1.16.4",
    "prop-types": "15.7.1",
    "react": "^16.8.4",
    "react-bem-helper": "1.4.1",
    "react-collapse": "^4.0.3",
    "react-device-detect": "^1.6.2",
    "react-dom": "^16.8.4",
    "react-height": "3.0.0",
    "react-helmet": "^5.2.0",
    "react-motion": "0.5.2",
    "react-prop-types": "0.4.0",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-test-renderer": "^16.8.1",
    "react-testing-library": "^5.6.1",
    "regenerator-runtime": "^0.13.1",
    "rimraf": "2.6.3",
    "serve": "^10.1.2",
    "sinon": "^7.2.3",
    "string-length": "^2.0.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333"
  }
}
