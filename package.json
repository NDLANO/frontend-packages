    "serve": "^14.2.0",
    "storybook": "^8.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "webpack": "^5.79.0"
  },
  "packageManager": "yarn@4.1.0"
}
