    "react": "^18.2.0",
    "react-bem-helper": "1.4.1",
    "react-device-detect": "^2.2.3",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^1.3.0",
    "react-i18next": "^13.3.0",
    "react-router-dom": "^6.3.0",
    "react-textarea-autosize": "^8.5.2",
