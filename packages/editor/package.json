  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NDLANO/frontend-packages.git",
    "directory": "packages/editor"
  },
  "keywords": [
    "editor",
    "slate",
    "ndla"
  ],
  "author": "ndla@knowit.no",
  "files": [
    "dist",
    "lib",
    "src",
    "es",
    "types"
  ],
  "dependencies": {
    "he": "^1.2.0",
    "is-hotkey": "^0.2.0",
    "slate": "^0.112.0",
    "slate-dom": "^0.111.0",
    "slate-history": "^0.110.3",
    "slate-hyperscript": "^0.100.0",
    "slate-react": "^0.112.0"
  },
  "peerDependencies": {
    "react": ">= 18",
    "react-dom": ">= 18"
  },
  "devDependencies": {
    "@ndla/preset-panda": "workspace:^",
    "@ndla/types-backend": "^1.0.1",
    "@ndla/types-embed": "^5.0.9-alpha.0",
    "@pandacss/dev": "^0.48.0",
    "@types/he": "^1.2.3",
    "@types/is-hotkey": "^0"
  },
