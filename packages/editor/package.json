{
  "name": "@ndla/editor",
  "version": "0.0.1",
  "description": "Slate editor components for NDLA",
  "license": "GPL-3.0",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "node ../../scripts/build.js package",
    "build:types": "tsc -p tsconfig.build.json",
    "prepublish": "concurrently 'yarn build:types' 'yarn build:panda'",
