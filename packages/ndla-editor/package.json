{
  "name": "@ndla/editor",
  "version": "0.2.4",
  "description": "Editor components for NDLA",
  "license": "GPL-3.0",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "scripts": {
    "build": "npm run build:commonjs && npm run build:es",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --quiet --out-dir lib --ignore __tests__",
    "build:es": "cross-env BABEL_ENV=es babel src --quiet --out-dir es --ignore __tests__",
    "clean": "rimraf lib es",
    "test": "jest",
    "prepublish": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NDLANO/frontend-packages.git/ndla-editor/"
  },
  "keywords": [
    "ndla"
  ],
  "author": "ndla@knowit.no",
  "files": [
    "lib",
    "es"
  ],
  "dependencies": {
    "@ndla/core": "^0.3.5",
    "@ndla/icons": "^0.4.5"
  },
  "peerDependencies": {
    "emotion": "^9.2.10",
    "react": "^16.4.2",
    "react-emotion": "^9.2.10",
    "react-prop-types": "0.4.0"
  }
}
