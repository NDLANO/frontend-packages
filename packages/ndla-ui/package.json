{
  "name": "ndla-ui",
  "version": "0.4.4-beta.1",
  "description": "Styleguide and ui component library for NDLA.",
  "license": "GPL-3.0",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "scripts": {
    "start": "npm run storybook",
    "build": "npm run build:commonjs && npm run build:es && npm run build:css",
    "build:commonjs": "$(cd ..; npm bin)/cross-env BABEL_ENV=commonjs $(cd ..; npm bin)/babel src --out-dir lib --ignore __tests__",
    "build:es": "$(cd ..; npm bin)/cross-env BABEL_ENV=es $(cd ..; npm bin)/babel src --out-dir es --ignore __tests__",
    "build:frontend": "npm run build:css && cp ./lib/style.css ~/Dropbox/Sites/ndla-frontend/style",
    "build:css": "webpack -p && cp ./dist/*.css ./es && cp ./dist/*.css ./lib",
    "clean": "$(cd ..; npm bin)/rimraf lib es dist",
    "prepublish": "npm run clean && npm run build",
    "test": "$(cd ..; npm bin)/jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -c .storybook -o ../../.out"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NDLANO/frontend-packages.git/ndla-ui/"
  },
  "keywords": [
    "styleguide",
    "storybook",
    "ndla"
  ],
  "author": "ndla@knowit.no",
  "files": [
    "lib",
    "es"
  ],
  "dependencies": {
    "classnames": "2.2.5",
    "react-bem-helper": "1.4.1",
    "react-prop-types": "0.4.0",
    "shortid": "^2.2.8"
  },
  "peerDependencies": {
    "prop-types": "^15.5.8",
    "react": "^15.5.4"
  },
  "devDependencies": {
    "@kadira/storybook": "2.35.3",
    "@kadira/storybook-addon-actions": "1.1.3",
    "@kadira/storybook-addon-links": "1.0.1",
    "@kadira/storybook-addon-options": "1.0.2",
    "btoa": "^1.1.2",
    "css-loader": "0.28.0",
    "decorate-component-with-props": "^1.0.2",
    "draft-convert": "1.4.3",
    "draft-js": "0.10.0",
    "enzyme": "2.8.2",
    "extract-text-webpack-plugin": "2.1.0",
    "inuitcss": "^6.0.0-beta.4",
    "isomorphic-fetch": "^2.2.1",
    "moment": "^2.17.1",
    "ndla-article-scripts": "^0.0.3",
    "ndla-editor": "^0.1.3",
    "ndla-licenses": "^0.0.7",
    "ndla-tabs": "^0.2.1",
    "ndla-util": "^0.1.1",
    "node-sass": "^4.3.0",
    "react-helmet": "5.0.3",
    "react-modal": "^1.6.5",
    "sass-loader": "6.0.3",
    "style-loader": "0.16.1",
    "webpack": "2.4.1"
  }
}
