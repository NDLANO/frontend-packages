{
  "name": "@ndla/preset-panda",
  "type": "module",
  "version": "0.0.74",
  "description": "Panda preset for NDLA.",
  "license": "GPL-3.0",
  "exports": {
    "types": "./lib/index.d.ts",
    "import": "./es/index.mjs",
    "require": "./lib/index.js"
  },
  "sideEffects": false,
  "scripts": {
    "prepare": "panda codegen",
    "build": "tsdown",
    "dev": "tsdown --watch ./src",
    "build:types": "tsc -p tsconfig.build.json",
    "prepublish": "concurrently 'yarn build:types' 'yarn build:css'",
    "build:css": "mkdir -p dist && panda cssgen --outfile dist/styles.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NDLANO/frontend-packages.git",
    "directory": "packages/preset-panda"
  },
  "keywords": [
    "panda",
    "preset",
    "ndla"
  ],
  "author": "ndla@knowit.no",
  "files": [
    "dist",
    "es",
    "lib"
  ],
  "dependencies": {
    "@ndla/core": "workspace:^",
    "@pandacss/dev": "^1.7.0"
  },
  "devDependencies": {
    "@ark-ui/react": "^5.30.0",
    "@ndla/styled-system": "workspace:^",
    "@pandacss/types": "1.7.0",
    "@storybook/react": "^10.2.10",
    "@testing-library/react": "16.3.2",
    "@types/react": "^19.2.14",
    "react": "^19.2.0",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public"
  }
}
