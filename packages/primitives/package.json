  "repository": {
    "type": "git",
    "url": "https://github.com/NDLANO/frontend-packages.git",
    "directory": "packages/primitives"
  },
  "keywords": [
    "primitives",
    "ndla"
  ],
  "author": "ndla@knowit.no",
  "files": [
    "dist",
    "es",
    "lib"
  ],
  "dependencies": {
    "@ndla/styled-system": "workspace:^",
    "@ndla/util": "^4.0.4",
    "deepmerge": "^4.3.1"
  },
  "devDependencies": {
    "@pandacss/dev": "^0.37.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
