{
  "name": "@ndla/primitives",
  "version": "0.0.0",
  "description": "Primitive components for NDLA",
  "license": "GPL-3.0",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "prepare": "panda codegen",
    "build": "node ../../scripts/build.js package",
    "build:types": "tsc -p tsconfig.build.json",
