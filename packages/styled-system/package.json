{
  "name": "@ndla/styled-system",
  "description": "Styled System for NDLA",
  "version": "0.0.29",
  "repository": {
    "type": "git",
    "url": "https://github.com/NDLANO/frontend-packages.git",
    "directory": "packages/styled-system"
  },
  "scripts": {
    "build": "node ../../scripts/build.js package"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">= 18",
    "react-dom": ">= 18"
  },
  "devDependencies": {
    "@pandacss/dev": "^0.48.0"
  },
  "files": [
    "*"
  ],
  "exports": {
    "./css": {
      "types": "./lib/css/index.d.ts",
      "require": "./lib/css/index.js",
      "import": "./es/css/index.js"
    },
    "./tokens": {
      "types": "./lib/tokens/index.d.ts",
      "require": "./lib/tokens/index.js",
      "import": "./es/tokens/index.js"
    },
    "./types": {
      "types": "./lib/types/index.d.ts",
      "require": "./lib/types/index.js",
      "import": "./es/types/index.js"
    },
    "./patterns": {
      "types": "./lib/patterns/index.d.ts",
      "require": "./lib/patterns/index.js",
      "import": "./es/patterns/index.js"
    },
    "./recipes": {
      "types": "./lib/recipes/index.d.ts",
      "require": "./lib/recipes/index.js",
      "import": "./es/recipes/index.js"
    },
    "./jsx": {
      "types": "./lib/jsx/index.d.ts",
      "require": "./lib/jsx/index.js",
      "import": "./es/jsx/index.js"
    }
  }
}
