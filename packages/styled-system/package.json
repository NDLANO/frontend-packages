{
  "name": "@ndla/styled-system",
  "description": "Styled System for NDLA",
  "version": "0.0.34",
  "repository": {
    "type": "git",
    "url": "https://github.com/NDLANO/frontend-packages.git",
    "directory": "packages/styled-system"
  },
  "scripts": {
    "build": "tsup",
    "build:dev": "tsup --watch",
    "build:types": "tsc -p tsconfig.build.json",
    "prepublish": "concurrently 'yarn build:types'"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">= 18",
    "react-dom": ">= 18"
  },
  "devDependencies": {
    "@pandacss/dev": "^0.53.6"
  },
  "files": [
    "*"
  ],
  "exports": {
    "./css": {
      "types": "./src/css/index.d.ts",
      "require": "./dist/css/index.js",
      "import": "./dist/css/index.mjs"
    },
    "./tokens": {
      "types": "./src/tokens/index.d.ts",
      "require": "./dist/tokens/index.js",
      "import": "./dist/tokens/index.mjs"
    },
    "./types": {
      "types": "./src/types/index.d.ts",
      "require": "./dist/types/index.js",
      "import": "./dist/types/index.mjs"
    },
    "./patterns": {
      "types": "./src/patterns/index.d.ts",
      "require": "./dist/patterns/index.js",
      "import": "./dist/patterns/index.mjs"
    },
    "./recipes": {
      "types": "./src/recipes/index.d.ts",
      "require": "./dist/recipes/index.js",
      "import": "./dist/recipes/index.mjs"
    },
    "./jsx": {
      "types": "./src/jsx/index.d.ts",
      "require": "./dist/jsx/index.js",
      "import": "./dist/jsx/index.mjs"
    }
  }
}
