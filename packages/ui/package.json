{
  "name": "@ndla/ui",
  "type": "module",
  "version": "56.0.177-alpha.0",
  "description": "UI component library for NDLA",
  "license": "GPL-3.0",
  "exports": {
    "types": "./lib/index.d.ts",
    "import": "./es/index.mjs",
    "require": "./lib/index.js"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch ./src",
    "build:types": "tsc -p tsconfig.build.json",
    "prepublish": "concurrently 'yarn build:types' 'yarn build:panda'",
    "build:panda": "mkdir -p dist && concurrently 'panda cssgen --minimal --outfile dist/styles.css' 'panda ship --outfile dist/panda.buildinfo.json'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NDLANO/frontend-packages.git",
    "directory": "packages/ui"
  },
  "keywords": [
    "styleguide",
    "storybook",
    "ndla"
  ],
  "author": "ndla@knowit.no",
  "files": [
    "dist",
    "lib",
    "src",
    "es",
    "types"
  ],
  "dependencies": {
    "@ark-ui/react": "^5.30.0",
    "@ndla/core": "workspace:^",
    "@ndla/icons": "workspace:^",
    "@ndla/licenses": "workspace:^",
    "@ndla/primitives": "workspace:^",
    "@ndla/safelink": "workspace:^",
    "@ndla/styled-system": "workspace:^",
    "@ndla/util": "workspace:^",
    "html-react-parser": "^5.2.8"
  },
  "peerDependencies": {
    "i18next": ">= 25.0.0",
    "react": ">= 18",
    "react-dom": ">= 18",
    "react-i18next": ">= 16",
    "react-router": ">= 7.0.0"
  },
  "devDependencies": {
    "@ndla/preset-panda": "workspace:^",
    "@ndla/types-backend": "^1.0.89",
    "@ndla/types-embed": "5.0.21-alpha.0",
    "@pandacss/dev": "^1.7.0",
    "@storybook/react": "^10.2.10",
    "@types/react": "^19.2.14",
    "react-i18next": "^16.5.3",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "ebeb8a1d86cba369e1156719ebaecb58a6e2cdfc"
}
