{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "esModuleInterop": true,
    "jsx": "react",
    // isolatedModules and declaration are not allowed togther atm
    // See: https://github.com/Microsoft/TypeScript/issues/29490
    // "isolatedModules": true,
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "noLib": false,
    "noEmit": true,
    "sourceMap": true,
    "lib": ["es2018", "esnext.asynciterable", "dom"],
    "types": ["@emotion/core", "jest"],
    "paths": {
      "@ndla/*": ["./packages/*/src"],
      "*": ["node_modules"]
    }
  },
  "exclude": ["./packages/*/lib", "**/*-test.*"]
}
